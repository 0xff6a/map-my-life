<section class='run_target_panel panel panel-default'>
  <div class='panel-body'>
    
    <article class='run_target'>
      <p>
        <strong>Goal:</strong>
        <%= run_target.distance %><%= run_target.distance_metric %> @ 
        <%= run_target.pace %><%= run_target.pace_metric %>
      </p>
      <p>
        <strong>Notes: </strong>
        <em><%= run_target.comment %></em>
      </p>
      <p>
        <strong>Due date:</strong>
        <%= run_target.due_date %>
      </p>
      <p class='hidden'>
        <var class='target_id'><%= run_target.id %></var>
      </p>
    </article>

    <aside class='pct_achieved'>
      
      <section class='progress'>
        
        <article class='progress-bar progress-bar-success' role='progressbar' aria-valuenow='<%= run_target.pct_achieved %>' aria-valuemin='0' aria-valuemax='100' style='width: <%= format_pct(run_target.pct_achieved) %>;'>
          <var><%= format_pct(run_target.pct_achieved) %></var>
        </article>
      
      </section>

    </aside>

  </div>
</section>
